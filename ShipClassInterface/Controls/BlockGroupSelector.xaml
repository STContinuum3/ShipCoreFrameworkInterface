<UserControl x:Class="ShipClassInterface.Controls.BlockGroupSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <ToggleButton Name="DropDownButton" 
                      Padding="8,4"
                      HorizontalContentAlignment="Stretch"
                      Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                      BorderBrush="{DynamicResource MaterialDesignTextBoxBorder}"
                      BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding SelectedText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          TextTrimming="CharacterEllipsis"
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource MaterialDesignBody}"
                          Margin="0,0,8,0"/>
                
                <materialDesign:PackIcon Grid.Column="1" 
                                       Kind="ChevronDown"
                                       VerticalAlignment="Center"
                                       Width="16" 
                                       Height="16"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </Grid>
        </ToggleButton>

        <Popup Name="BlockGroupPopup"
               IsOpen="{Binding IsChecked, ElementName=DropDownButton}"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=DropDownButton}"
               StaysOpen="True"
               AllowsTransparency="True"
               Width="{Binding ActualWidth, ElementName=DropDownButton}"
               MinWidth="250"
               Focusable="False">
            
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Effect="{DynamicResource MaterialDesignShadowDepth2}"
                    PreviewMouseDown="PopupBorder_PreviewMouseDown">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesignToolBarBackground}"
                            Padding="12,8"
                            CornerRadius="4,4,0,0">
                        <TextBlock Text="Select Block Groups" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                    </Border>
                    
                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" 
                                  MaxHeight="300"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl Name="BlockGroupItemsControl" 
                                      Margin="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected}"
                                              Margin="4,2"
                                              Style="{StaticResource MaterialDesignCheckBox}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Footer with controls and selected count -->
                    <Border Grid.Row="2" 
                            Background="{DynamicResource MaterialDesignCardBackground}"
                            Padding="8,6"
                            CornerRadius="0,0,4,4"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Control buttons -->
                            <StackPanel Grid.Row="0" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,6">
                                <Button Name="SelectAllButton" 
                                        Content="Select All"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Padding="8,2"
                                        FontSize="11"
                                        MinWidth="60"
                                        Click="SelectAllButton_Click"/>
                                <Button Name="ClearAllButton" 
                                        Content="Clear All"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Padding="8,2"
                                        FontSize="11"
                                        MinWidth="60"
                                        Margin="4,0,0,0"
                                        Click="ClearAllButton_Click"/>
                                <Button Name="DoneButton" 
                                        Content="Done"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Padding="12,2"
                                        FontSize="11"
                                        MinWidth="50"
                                        Margin="8,0,0,0"
                                        Click="DoneButton_Click"/>
                            </StackPanel>
                            
                            <!-- Selection count -->
                            <TextBlock Grid.Row="1" 
                                       Name="SelectionCountText" 
                                       FontSize="10"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>