<UserControl x:Class="ShipClassInterface.Controls.DirectionSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <CheckBox Content="Forward" 
                  IsChecked="{Binding ForwardSelected}" 
                  Margin="2,0" 
                  Style="{StaticResource MaterialDesignCheckBox}"/>
        <CheckBox Content="Backward" 
                  IsChecked="{Binding BackwardSelected}" 
                  Margin="2,0" 
                  Style="{StaticResource MaterialDesignCheckBox}"/>
        <CheckBox Content="Up" 
                  IsChecked="{Binding UpSelected}" 
                  Margin="2,0" 
                  Style="{StaticResource MaterialDesignCheckBox}"/>
        <CheckBox Content="Down" 
                  IsChecked="{Binding DownSelected}" 
                  Margin="2,0" 
                  Style="{StaticResource MaterialDesignCheckBox}"/>
        <CheckBox Content="Left" 
                  IsChecked="{Binding LeftSelected}" 
                  Margin="2,0" 
                  Style="{StaticResource MaterialDesignCheckBox}"/>
        <CheckBox Content="Right" 
                  IsChecked="{Binding RightSelected}" 
                  Margin="2,0" 
                  Style="{StaticResource MaterialDesignCheckBox}"/>
    </StackPanel>
</UserControl>